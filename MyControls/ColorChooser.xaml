<UserControl x:Name="MWColorChooser" x:Class="MyControls.ColorChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyControls"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="250" Width="Auto" Height="Auto" MinWidth="250" MinHeight="125">
    <Grid>
        <local:ColorTextBox x:Name="RedCTB" Margin="10,10,0,0" TextWrapping="Wrap" Text="0" Height="18"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <local:ColorTextBox x:Name="GreenCTB" Margin="10,38,0,0" TextWrapping="Wrap" Text="0" Height="18"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <local:ColorTextBox x:Name="BlueCTB" Margin="10,66,0,0" TextWrapping="Wrap" Text="0" Height="18"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <RadioButton x:Name="DecRB" Content="Dec" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" IsChecked="True" Checked="DecRB_Checked"/>
        <RadioButton x:Name="HexRB" Content="Hex" HorizontalAlignment="Left" Margin="91,104,0,0" VerticalAlignment="Top" Checked="HexRB_Checked"/>
        <Rectangle x:Name="SmpRect" Margin="140,10,10,15"/>
    </Grid>
</UserControl>
